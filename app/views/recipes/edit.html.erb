<div class="container-fluid">
  <div class="row" >
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <% if @recipe.errors.any? %>
        <% @recipe.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
        <% end %>
      <% end %>
      <h4 class="h4-text">Edit Recipe</h4>

    </div>
    <div class="col-sm-3"></div>
  </div>
</div>

<%= render "form", post_url: recipes_path %>

<br><br>

<div class="container-fluid">
  <div class="row" >
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
      <center>
        <%= button_to "Delete Recipe", {:controller => :recipes, :action => 'destroy', :id => @recipe.id }, :method => :delete, class: "btn btn-default"  %>
      </center>
    </div>
    <div class="col-sm-3"></div>
  </div>
</div>