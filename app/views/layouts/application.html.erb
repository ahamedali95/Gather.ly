<!DOCTYPE html>
<html>
  <head>
    <title>Potluck</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <% if logged_in %>
          <%= link_to "Logout", log_out_path %>
        <% else %>
          <%= link_to "Login", log_in_path %>
        <% end %>
    <%= yield %>
  </body>
</html>
