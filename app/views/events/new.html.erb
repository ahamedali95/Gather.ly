<h1> Create a new event </h1>

<ul>
  <% if flash[:error] %>
    <% flash[:error].each do |error| %>
      <li><%= error %></li>
    <% end %>
  <% end %>
</ul>

<%= form_for @event do |e| %>
  <%= e.label :title %>
  <%= e.text_field :title %> <br>

  <%= e.label :location %>
  <%= e.text_field :location %> <br>

  <%= e.label :date %>
  <%= e.text_field :date %> <br>

  <%= e.label :details %>
  <%= e.text_area :details %> <br>

  <%if @user.recipes.length > 0%>
    <%= e.collection_select :recipe_ids, @recipes ,:id, :name %>
  <% end %>
  <%= e.submit %>
<% end %>
