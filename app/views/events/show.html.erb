<h1><%= @event.title %> </h1><br>

<h3>Recipes: </h3> <br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Recipe Name</th>
      <th scope="col">Person</th>
    </tr>
  </thead>
  <tbody>
    <% @event.recipes.each_with_index do |recipe_obj, index| %>
      <tr>
        <th scope="row"><%index + 1%></th>
        <td>recipe_obj.name</td>
        <td>recipe_obj.user.name</td>
      </tr>
    <% end %>
  </tbody>
</table>


<% if !@user.events.include?(@event) %>
  <%= form_tag({controller: "events", method: "post", action: "join_event"}) do %>
    <%= submit_tag "Join Event"%>
  <% end %>
<% end %>

<% if @user.events.include?(@event) %>
  <%= form_tag({controller: "events", method: "post", action: "leave_event"}) do %>
    <%= submit_tag "Leave Event"%>
  <% end %>
<% end %>
