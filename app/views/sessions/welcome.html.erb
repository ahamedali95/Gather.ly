<html>
  <body>
    <%= link_to "Create an Account", sign_up_path %>
    <div id="main-container" class="container-fluid">
      <div class="row">
        <div id="content" class="col-md-4"></div>
        <div id="content" class="col-md-4">
          <h4 class="text-left"> Ptlk_Planner </h4>
          <h6 class="text-right"> Your Flatiron Potluck Planner. </h6>

          <%= form_for User.new, url: sessions_path, method: :post do |t| %>
            <div class="form-group">
                <%= t.label :username %> 
                <%= t.text_field :username, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= t.label :password %> 
              <%= t.password_field :password, class: "form-control" %>
            </div>

            <%= t.submit %>
          <% end %>

        </div>
          <div id="content" class="col-md-4"></div>
      </div>
    </div>
  </body>
</html>