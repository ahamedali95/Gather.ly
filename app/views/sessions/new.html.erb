<html>
  <body>
    <div id="main-container" class="container-fluid">
      <div class="row">
        <div id="content" class="col-md-4">
        </div>
        <div id="content" class="col-md-4">
          <h4 class="text-left"> Ptlk_Planner </h4>  <h6 class="text-right"> Your Flatiron Potluck Planner. </h6>
          <% if flash[:errors] %>
              <ul>
                <% flash[:errors].each do |e|%>
                <li style="color:red"><%= e %></li>
              </ul>
                <% end %>
          <% end %>

      <%= form_tag sessions_path do  %>
          <div class="form-group">
            <%= label_tag :username %>
            <%= text_field_tag :username, "", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, "", class: "form-control" %>
          </div>

          <%= submit_tag "Login" %>
      <% end %>

        </div>
        <div id="content" class="col-md-4">
        </div>
      </div>
    </div>
  </body>
</html>
